[color]
	ui = auto
[user]
	name = Jonathan Toppins
	email = jtoppins@users.sourceforge.net
[push]
	default = matching
[core]
	editor = vim
	excludesfile = ~/.gitexclude
	abbrev = 12
[merge]
	tool = vimdiff
[sendemail]
	thread = true
	confirm = always
	validate = true
	chainreplyto = false
	suppresscc = self
[pretty]
	fixes = Fixes: %h (\"%s\")
[format]
	signOff = true
	coverletter = auto
	thread = true
[alias]
	cp = cherry-pick -x

# Always include this last so it can override items in this file.
[include]
	path = ~/.gitconfig-customizations
